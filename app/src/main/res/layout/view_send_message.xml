<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:02 PM"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/avatar6"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send_msg_normal"
            android:layout_toLeftOf="@id/avatar"
            android:gravity="center"/>

        <!--发送消息的进度条-->
        <ImageView
            android:id="@id/send_message_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send_message_progress"
            android:layout_toLeftOf="@id/content"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</LinearLayout>